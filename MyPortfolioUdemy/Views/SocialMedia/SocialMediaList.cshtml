@model List<SocialMedia>
@{
    ViewData["Title"] = "SocialMediaList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">

					<div class="card-body">

						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>	
									<th scope="col">Başlık</th>
									<th scope="col">Link</th>
									<th scope="col">İkon</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.SocialMediaID</td>
										<td>@item.Title</td>
										<td>@item.Url</td>
										<td>@item.Icon</td>
										<td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-danger">Sil</a></td>
										<td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-success">Güncelle</a></td>

									</tr>

								}
							</tbody>
						</table>
						<a href="/SocialMedia/CreateSocialMedia/" class="btn btn-primary">Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

