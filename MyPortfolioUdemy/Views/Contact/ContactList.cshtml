@model List<Contact>
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">

					<div class="card-body">

						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Telefon1</th>
									<th scope="col">Telefon2</th>
									<th scope="col">Eposta1</th>
									<th scope="col">Eposta2</th>
									<th scope="col">Adres</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ContactID</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td>@item.Phone1</td>
										<td>@item.Phone2</td>
										<td>@item.Email1</td>
										<td>@item.Email2</td>
										<td>@item.Address</td>
										<td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-danger">Sil</a></td>
										<td><a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-success">Güncelle</a></td>

									</tr>

								}
							</tbody>
						</table>
						<a href="/Contact/CreateContact/" class="btn btn-primary">Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

