@model List<About>
@{
	ViewData["Title"] = "AboutList";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımda</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-body">
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Alt Açıklama</th>
									<th scope="col">Detaylar</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.AboutID</td>
										<td>@item.Title</td>
										<td>@item.SubDescription</td>
										<td>@item.Details</td>
										<td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-danger">Sil</a></td>
										<td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-success">Güncelle</a></td>

									</tr>

								}
							</tbody>
						</table>
						<a href="/About/CreateAbout/" class="btn btn-primary">Yeni Hakkımda Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>